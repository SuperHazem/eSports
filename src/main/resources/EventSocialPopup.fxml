<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EventSocialPopupController"
      spacing="15" alignment="CENTER"
      stylesheets="@styles/application.css"
      prefWidth="500" prefHeight="600">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>

    <!-- Title -->
    <Label fx:id="titleLabel" text="Ajouter Événement Social" styleClass="form-title" />

    <!-- Name Field -->
    <VBox spacing="5">
        <Label text="Nom:" styleClass="field-label" />
        <TextField fx:id="nomField" promptText="Entrez le nom de l'événement" styleClass="input-field" />
    </VBox>

    <!-- Date Field -->
    <VBox spacing="5">
        <Label text="Date:" styleClass="field-label" />
        <DatePicker fx:id="datePicker" styleClass="date-picker" />
    </VBox>

    <!-- Location Field -->
    <VBox spacing="5">
        <Label text="Lieu:" styleClass="field-label" />
        <HBox spacing="5">
            <TextField fx:id="lieuField" promptText="Entrez le lieu" styleClass="input-field" HBox.hgrow="ALWAYS" />
            <Button text="Sélectionner sur la carte" onAction="#openMap" styleClass="map-button" />
        </HBox>
    </VBox>

    <!-- Map View (initially hidden) -->
    <VBox fx:id="mapContainer" spacing="5" visible="false" managed="false">
        <HBox alignment="CENTER_RIGHT" spacing="5">
            <Button text="Fermer la carte" onAction="#closeMap" styleClass="cancel-button" />
        </HBox>
        <WebView fx:id="mapView" prefHeight="300" />
    </VBox>

    <!-- Description Field -->
    <VBox spacing="5">
        <Label text="Description:" styleClass="field-label" />
        <TextArea fx:id="descriptionField" promptText="Entrez la description" styleClass="input-field" prefRowCount="3" />
    </VBox>

    <!-- Capacity Field -->
    <VBox spacing="5">
        <Label text="Capacité:" styleClass="field-label" />
        <TextField fx:id="capaciteField" promptText="Entrez la capacité" styleClass="input-field" />
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Enregistrer" onAction="#save" styleClass="add-button" />
        <Button text="Annuler" onAction="#annuler" styleClass="cancel-button" />
    </HBox>
</VBox> 