<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PaiementController"
      spacing="10"
      alignment="CENTER"
      prefWidth="600"
      prefHeight="500">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Paiement de votre ticket" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    

    <HBox spacing="10" alignment="CENTER">
        <Label text="Email pour recevoir votre ticket:"/>
        <TextField fx:id="emailField" promptText="votre@email.com" HBox.hgrow="ALWAYS"/>
    </HBox>

    <Button fx:id="annulerButton" text="Annuler" maxWidth="Infinity"/>

</VBox>