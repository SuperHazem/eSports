<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DetailAreneController"
      spacing="15"
      alignment="CENTER"
      styleClass="root"
      prefWidth="400" prefHeight="250">

    <Label text="Détails de l'Arène" styleClass="title"/>

    <GridPane hgap="10" vgap="10">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <Label text="Nom:" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Localisation:" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="locationLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Capacité:" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="capacityLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Statut:" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="statusLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Fermer" onAction="#handleClose" styleClass="cancel-button"/>
</VBox>